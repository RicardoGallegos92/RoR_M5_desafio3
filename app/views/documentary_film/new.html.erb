<h1>Insert new Documentary Film</h1>
<hr>
<%= form_with model: @documentary_film, url: '/documentary_film', local: true do |form| %>
    <div>
        <%= form.label :name, "Nombre Documental" %>
        <br>
        <%= form.text_field :name %>
    </div>
    <hr>
    <div>
        <%= form.label :director, "Director" %>
        <br>
        <%= form.text_field :director %>
    </div>
    <hr>
    <div>
        <%= form.label :synopsis, "Sinopsis" %>
        <br>
        <%= form.text_area :synopsis %>
    </div>
    <hr>
    <div>
        <%= form.submit %>
    </div>
<% end %>
