<h1>Insert new Serie</h1>
<hr>
<%= form_with model: @serie, url: '/serie', local: true do |form| %>
    <div>
        <%= form.label :name, "Nombre Serie" %>
        <br>
        <%= form.text_field :name %>
    </div>
    <hr>
    <div>
        <%= form.label :synopsis, "Sinopsis" %>
        <br>
        <%= form.text_field :synopsis %>
    </div>
    <hr>
    <div>
        <%= form.label :director, "Director" %>
        <br>
        <%= form.text_field :director %>
    </div>
    <hr>
    <div>
    <%= form.submit %>
    </div>
<% end %>
